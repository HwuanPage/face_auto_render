<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="grad.member.mapper.LoginMapper">

<!-- 로그인 -->
	<select id ="loginMemberSQL" parameterType="java.util.Map" resultType="grad.member.model.Member">
		SELECT * FROM tb_member
	    WHERE member_id = #{memberId} AND member_pwd = SHA2(#{memberPwd}, 512)
	</select>

</mapper>